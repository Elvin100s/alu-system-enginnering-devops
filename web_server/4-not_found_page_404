#!/usr/bin/env bash
# This script configures an Ubuntu machine to serve a custom 404 page with the string "Ceci n'est pas une page".

# Update package list and install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Allow Nginx HTTP through the firewall
sudo ufw allow 'Nginx HTTP'

# Create the custom 404 error page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html > /dev/null

# Set correct permissions for the 404 page
sudo chmod 644 /var/www/html/404.html

# Configure Nginx to use the custom 404 error page
sudo sed -i 's/listen 80 default_server;/listen 80 default_server;\n\terror_page 404 \/404.html;\n\tlocation = \/404.html {\n\t\troot \/var\/www\/html;\n\t\tinternal;\n\t}/' /etc/nginx/sites-enabled/default

# Test Nginx configuration for syntax errors
sudo nginx -t

# Restart Nginx to apply the changes
sudo service nginx restart
