#!/usr/bin/env bash
# Configures a new Ubuntu machine by installing Nginx and setting it up to serve a page with "Holberton School"

# Update and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Backup default index file (optional but recommended for safety)
sudo cp /var/www/html/index.nginx-debian.html /var/www/html/index.nginx-debian.html.bckp

# Create a new index file with the required content
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html > /dev/null

# Restart Nginx without using systemctl
sudo service nginx restart

# Configure firewall to allow Nginx and OpenSSH
sudo ufw enable
sudo ufw allow 'Nginx HTTP'
sudo ufw allow 'OpenSSH'

# Verify the configuration
curl_output=$(curl -s localhost)
if [[ "$curl_output" == "Holberton School for the win!" ]]; then
  echo "Nginx is installed and serving the correct content."
else
  echo "Nginx configuration verification failed. Output does not contain 'Holberton School for the win!'."
  exit 1
fi

echo "Completed. Nginx is installed and configured to serve 'Holberton School for the win!'."
