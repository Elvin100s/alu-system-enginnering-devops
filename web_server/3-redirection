#!/usr/bin/env bash
# Script that configures a new Ubuntu machine with the following requirements:

# Update and install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Allow Nginx HTTP traffic
sudo ufw allow 'Nginx HTTP'

# Create the custom 404 page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html > /dev/null

# Modify the Nginx configuration to use the custom 404 page
sudo sed -i '/server_name _;/a \\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx
sudo service nginx restart
