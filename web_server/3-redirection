#!/usr/bin/env bash
# Configure Nginx server to redirect /redirect_me with a 301 Moved Permanently status

# Update package list and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Modify the existing Nginx default configuration
sudo sed -i '/server_name _;/a \    location = /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }' /etc/nginx/sites-available/default

# Test Nginx configuration
sudo nginx -t

# Restart Nginx to apply changes
sudo systemctl restart nginx
